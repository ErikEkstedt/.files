{
  "title": "Left-Arrow when hold -> FN",
  "rules": [
    {
      "description": "Left Arrow if pressed alone otherwise FN modifier",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "fn"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    }
  ]
}
