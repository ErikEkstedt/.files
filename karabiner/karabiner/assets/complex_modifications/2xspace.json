{
  "title": "2xSpaceEnter",
  "rules": [
    {
      "description": "Double tap Space -> Enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }],
            "conditions": [{
              "type": "variable_if",
              "name": "space pressed",
              "value": 1
            }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "space pressed",
                "value": 1
              }
            },
            {
              "key_code": "spacebar"
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "space pressed",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "space pressed",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
