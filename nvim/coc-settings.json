{
  "coc.preferences.colorSupport": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    }
  },
  "coc.source.word.enable": true,
  "coc.source.file.enable": true,
  "coc.source.neco.enable": true,
  "coc.source.around.enable": true,
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.pylintPath": "~/miniconda3/envs/neovim3/bin/pylint",
  "python.condaPath": "~/miniconda3/bin/conda",
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 30,
  "suggest.noselect": true
}
