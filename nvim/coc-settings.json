{
    "coc.preferences.colorSupport": true,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh", "bash"],
            "ignoredRootPaths": ["~"]
        }
    },
    "coc.source.word.enable": true,
    "coc.source.file.enable": true,
    "coc.source.around.enable": true,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": "◾️",
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.signoffset": 1000,
    "diagnostic.format": "[%source] %severity: %message",
    "diagnostic.messageDelay": 100,
    "diagnostic.errorSign": "✖",
    "diagnostic.warningSign": "⚠",
    "diagnostic.infoSign": ">>",
    "diagnostic.hintSign": ">>",
    "diagnostic.refreshOnInsertMode": false,
    "python.analysis.diagnosticPublishDelay": 200,
    "python.analysis.information": ["  "],
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.setLinter": "flake8",
    "python.linting.pylintPath": "miniconda3/envs/neovim3/bin/flake8",
    "python.condaPath": "~/miniconda3/bin/conda",
    "python.venvPath": "~/miniconda3/envs",
    "suggest.echodocSupport": true,
    "suggest.maxCompleteItemCount": 30,
    "suggest.noselect": true,
    "suggest.completionItemKindLabels": {
        // todo: find out what symbols to use and what they are
        "class": "[class]",
        "color": "[color]",
        "constant": "[const]",
        "default": "[default]",
        "enum": "[enum]",
        "enumMember": "[enumMember]",
        "event": "[event]",
        "field": "[field]",
        "file": "[file]",
        "folder": "[folder]",
        "function": "[fun]",
        "interface": "[interface]",
        "keyword": "[keyword]",
        "method": "[method]",
        "module": "[module]",
        "operator": "[op]",
        "property": "[property]",
        "reference": "[ref]",
        "snippet": "✂",
        "struct": "[struct]",
        "text": "[text]",
        "typeParameter": "[typeParam]",
        "unit": "[unit]",
        "value": "[value]",
        "variable": "[var]"
    }
}
