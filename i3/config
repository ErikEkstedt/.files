# Floating constraints
floating_minimum_size 75 x 74
floating_maximum_size 1910 x 3000 

# Ctrl alt delete
bindsym $mod+Ctrl+Delete exec gnome-system-monitor

# reload the configuration file
bindsym $mod+Ctrl+c reload 
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Ctrl+r restart

################################################################
# APPEARENCE - borders and gaps
################################################################
hide_edge_borders both
for_window [class="^.*"] border pixel 2
# color of focused window
client.focused #00CDFF #00CDFF #00CDFF 
# initial gap size
gaps inner 13
gaps outer 0 

# Workspace specific gaps
workspace $ws1 gaps inner 0
workspace $ws1 gaps outer 0
workspace $ws2 gaps inner 0
workspace $ws2 gaps outer 0
workspace $ws8 gaps inner 0
workspace $ws8 gaps outer 0

# Chaning gap size, no gaps, initial gap size
bindsym Ctrl+g gaps inner current plus 5
bindsym Ctrl+Shift+g gaps inner current minus 5
bindsym $mod+Ctrl+Shift+g gaps inner current set 15, gaps outer current set 0
bindsym $mod+Ctrl+g gaps inner current set 0, gaps outer current set 0

# Shell that rewrites xfce4-terminal rc file.
# Terminal Transparancy
bindsym $mod+Ctrl+t exec ~/.files/Scripts/term_transpar_up
bindsym $mod+Ctrl+Shift+t  exec ~/.files/Scripts/term_transpar_down
# Termnal FontSize
bindsym $mod+Ctrl+Shift+f exec ~/.files/Scripts/Font_decrease
bindsym $mod+Ctrl+f exec ~/.files/Scripts/Font_increase

#Pulse Audio controls
# special keyboard commands
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

# Media player controls
#bindsym XF86AudioPlay exec playerctl play
#bindsym XF86AudioPause exec playerctl pause
#bindsym XF86AudioNext exec playerctl next
#bindsym XF86AudioPrev exec playerctl previous

# Scripts that change brightness settings on my laptop
# Screen brightness controls
bindsym XF86MonBrightnessUp exec ~/.files/Scripts/screen_bright -u
bindsym XF86MonBrightnessDown exec ~/.files/Scripts/screen_bright -d

bindsym Shift+XF86MonBrightnessDown exec sudo ~/.files/Scripts/intel_screen_bright_min 
bindsym Ctrl+XF86MonBrightnessDown exec sudo ~/.files/Scripts/intel_screen_bright_mid 
bindsym Shift+XF86MonBrightnessUp exec sudo ~/.files/Scripts/intel_screen_bright_max

# Keyboard brightness controls
bindsym XF86KbdBrightnessUp exec sudo ~/.files/Scripts/backlit_keys 
bindsym XF86KbdBrightnessDown exec sudo ~/.files/Scripts/backlit_keys down

# Hibernate
bindsym XF86Sleep exec systemctl hybrid-sleep

#########################################################################
# So standard that they are never changed. 
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# change workspace
bindsym $mod+Ctrl+l workspace next
bindsym $mod+Ctrl+h workspace prev

# resize
bindsym $mod+Shift+y resize shrink width 2 px or 2 ppt
bindsym $mod+Shift+i resize grow height 2 px or 2 ppt
bindsym $mod+Shift+u resize shrink height 5 px or 2 ppt
bindsym $mod+Shift+o resize grow width 2 px or 2 ppt

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+Shift+v split h
bindsym $mod+v split v

# enter fullscreen mode for the focused container
popup_during_fullscreen smart
bindsym $mod+f fullscreen toggle
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+z focus parent
bindsym $mod+z focus child

# Start i3bar to display a workspace bar (plus the system information i3status
bar {
	colors {
		# Whole color settings
		background #000000
		statusline #00CDFF
		separator  #FFFFFF

		# Type             border  background font
		focused_workspace  #008FB3 #00CDFF #000000
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #333333 #222222 #888888
		urgent_workspace   #aa0000 #990000 #ffffff
	}
    separator_symbol "|"
    workspace_buttons yes # Show workspace buttons
    strip_workspace_numbers no # strip away WS numbers
	position top # i3bar position
    
	# Using custom i3status.conf
	status_command i3status -c ~/.config/i3/i3status.conf
}

# TODO : scripts that syncs github on exit/Start
# Create Log out, Reboot, Poweroff bindings
set $reboot_choice "Exit (L)ogout, (R)eboot, (P)oweroff"
mode $reboot_choice{
        bindsym $mod+r exec systemctl reboot
        bindsym $mod+l exit 
        bindsym $mod+p exec systemctl poweroff

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Ctrl+e mode $reboot_choice

# Mode to select config files
set $config_choice "Config: (i)3, (V)im, (R)anger, (Z)sh, (X)defaults, (P)ython.vim, (T)ex.vim, t(M)ux "
mode $config_choice{
        bindsym $mod+v exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/vimrc", mode "default"
        bindsym $mod+r exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/ranger/rc.conf", mode "default"
        bindsym $mod+z exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/zshrc", mode "default"
        bindsym $mod+i exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/i3/config", mode "default"
        bindsym $mod+x exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/Xdefaults", mode "default"
        bindsym $mod+p exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/vim/ftplugin/python.vim ", mode "default"
        bindsym $mod+t exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/vim/ftplugin/tex.vim", mode "default"
        bindsym $mod+m exec $term -T "Vim-config" -e bash -c "stty -ixon && vim ~/.files/tmux.conf", mode "default"
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode $config_choice
