# Scripts that change brightness settings on my laptop
# Screen brightness controls
bindsym XF86MonBrightnessUp exec ~/.config/own_scripts/screen_bright -u
bindsym XF86MonBrightnessDown exec ~/.config/own_scripts/screen_bright -d

bindsym Shift+XF86MonBrightnessDown exec sudo ~/.config/own_scripts/intel_screen_bright_min 
bindsym Ctrl+XF86MonBrightnessDown exec sudo ~/.config/own_scripts/intel_screen_bright_mid 
bindsym Shift+XF86MonBrightnessUp exec sudo ~/.config/own_scripts/intel_screen_bright_max

# Keyboard brightness controls
bindsym XF86KbdBrightnessUp exec sudo ~/.config/own_scripts/backlit_keys_up
bindsym XF86KbdBrightnessDown exec sudo ~/.config/own_scripts/backlit_keys_down

# Hibernate
bindsym XF86Sleep exec systemctl hybrid-sleep

# Start i3bar to display a workspace bar (plus the system information i3status
bar {
	colors {
		# Whole color settings
		background #000000
		statusline #00CDFF
		separator  #FFFFFF

		# Type             border  background font
		focused_workspace  #008FB3 #00CDFF #000000
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #333333 #222222 #888888
		urgent_workspace   #aa0000 #990000 #ffffff
	}
    separator_symbol "|"
    workspace_buttons yes # Show workspace buttons
    strip_workspace_numbers no # strip away WS numbers
	position top # i3bar position
    
	# Using custom i3status.conf
	status_command i3status -c ~/.config/i3/i3status.conf
}

# Create Log out, Reboot, Poweroff bindings
mode "Exit (L)ogout, (R)eboot, (P)oweroff" {
        bindsym $mod+r exec /home/erik/.config/own_scripts/WorkFlow_updater, exec systemctl reboot
        bindsym $mod+l exec /home/erik/.config/own_scripts/WorkFlow_updater, exit 
        bindsym $mod+p exec /home/erik/.config/own_scripts/WorkFlow_updater, exec systemctl poweroff
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Shift+e mode "Exit (L)ogout, (R)eboot, (P)oweroff"
