#========= SHUTDOWN =============={{{
# TODO : scripts that syncs github on exit/Start
# Create Log out, Reboot, Poweroff bindings
set $reboot_choice "Exit (L)ogout, (R)eboot, (P)oweroff"
mode $reboot_choice{
	bindsym $mod+r exec systemctl reboot
	bindsym $mod+l exit 
	bindsym $mod+p exec systemctl poweroff

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Ctrl+e mode $reboot_choice
#}}}
#========= CONFIG MENU ==========={{{
set $config_choice "Config: (i)3, (V)im, (R)anger, (Z)sh, (X)defaults, (P)ython.vim, t(E)x.vim, (T)mux, (C)onfig folder in vim "
mode $config_choice{
	bindsym $mod+v exec $term3 -e bash -c "stty -ixon && vim ~/.files/vimrc", mode "default"
	bindsym $mod+r exec $term3 -e bash -c "stty -ixon && vim ~/.files/ranger/rc.conf", mode "default"
	bindsym $mod+z exec $term3 -e bash -c "stty -ixon && vim ~/.files/zshrc", mode "default"
	bindsym $mod+i exec $term3 -e bash -c "stty -ixon && vim ~/.files/i3/config", mode "default"
	bindsym $mod+x exec $term3 -e bash -c "stty -ixon && vim ~/.files/Xresources", mode "default"
	bindsym $mod+p exec $term3 -e bash -c "stty -ixon && vim ~/.files/vim/ftplugin/python.vim ", mode "default"
	bindsym $mod+e exec $term3 -e bash -c "stty -ixon && vim ~/.files/vim/ftplugin/tex.vim", mode "default"
	bindsym $mod+t exec $term3 -e bash -c "stty -ixon && vim ~/.files/tmux.conf", mode "default"
	bindsym $mod+o exec $term3 -e bash -c "stty -ixon && cd ~/com_sci/Master_code/Robot && vim"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode $config_choice
#}}}

