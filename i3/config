# i3 config file (v4)

# Please see http://i3wm.org/docs/userguide.html for a complete reference!
# MOD-keys
# mod - Alt, mod2 - win
set $mod Mod1
set $mod2 Mod4

# SET VARIABLES
set $term urxvt
set $term2 xfce4-terminal

set $Browser google-chrome
set $Music spotify
set $Editor vim

floating_modifier $mod
bindsym $mod+Shift+q kill
font pango:monospace 12

# Lock computer
bindsym $mod2+l exec bash -c "gnome-screensaver-command -l"
bindsym $mod2+F1 exec bash -c "systemctl suspend"

# test key- for testing different scripts
bindsym $mod2+t exec bash -c "cd ~/Pictures/wallpaper && ./bg_wal ~/.config/wall.png"
#bindsym $mod2+t exec $term

# WORKSPACES
set $ws1 "1:Web 1"
set $ws2 "2:Web 2"
set $ws3 "3:Code"
set $ws4 "4:Code"
set $ws5 "5:Tex"
set $ws6 "6:Pdf"
set $ws7 "7:Calendar"
set $ws8 "8:Laptop"
set $ws9 "9:Netflix"
set $ws10 "10:Spotify"
set $ws11 "11:Master"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

# Scratchpad
bindsym Mod1+Tab scratchpad show
bindsym Mod1+Shift+Tab move scratchpad

# Monitor Setup
# Move workspace to different monitor
bindsym $mod2+m move workspace to output up
bindsym $mod2+F8 exec ~/.files/Scripts/monitor_toggle

## STARTUP
#exec_always --no-startup-id compton --config ~/.files/compton/config
exec_always feh --bg-scale ~/.config/wall.png
exec ~/.files/Scripts/start_up.sh
#exec_always --no-startup-id ~/.files/i3/scripts/polybar.sh
exec --no-startup-id gnome-sound-applet
exec --no-startup-id gnome-settings-daemon
exec --no-startup-id nm-applet
exec --no-startup-id udiskie

#exec $term -T "News" -e bash -c "stty -ixon && newsbeuter"
#for_window [class="URxvt" title="News"] move container workspace $ws5; workspace $ws5

exec $term -T "scratchTerm"
for_window [class="URxvt" title="scratchTerm"] move scratchpad

# TERMINAL
bindsym $mod+Return exec $term 
bindsym $mod+Shift+Return exec $term -T "scratchTerm"
bindsym $mod+y exec $term2

# Open a ranger terminal
bindsym $mod+r exec $term -e bash -c "stty -ixon && ranger"
bindsym $mod2+r exec $term -e bash -c "stty -ixon && sudo ranger"

# Open a floating ranger terminal
bindsym $mod+Shift+r exec $term -T "rangerTerm" -e bash -c "stty -ixon && ranger"
for_window [class="URxvt" title="rangerTerm"] floating enable, \
resize grow left 300, resize grow right 300, \
resize grow down 150, resize grow up 100 

# Open floating terminal
bindsym $mod+t exec --no-startup-id $term -T "metaTerm"
for_window [class="URxvt" title="metaTerm"] floating enable, \
resize grow left 120, resize grow right 120, \
resize grow down 250, resize grow up 250


# APPLICATIONS and SETINGS
# Fast Access
bindsym $mod+g exec $Browser 
bindsym $mod+s exec $Music; workspace $ws9
bindsym $mod+a exec bash ~/.files/Scripts/touchpad_onoff.sh

# Calendar 
bindsym $mod+c exec ~/.files/i3/scripts/Calendar.sh

# Normal Access
bindsym $mod+Shift+n exec nautilus --no-desktop
bindsym $mod+Shift+s exec shutter -s
bindsym $mod+Shift+t exec ~/Downloads/TeamSpeak3-Client-linux_amd64/ts3client_runscript.sh

# start rofi (a program launcher)
bindsym $mod+Ctrl+d exec rofi rofi -show  \
run -font "ubuntu mono 18" -fg "#505050"  \
-bg "#000000" -hlfg "#ffb964" -hlbg "#000000"  \
-width 30 -lines 8 -padding 20 -separator-style none  \
-hide-scrollbar -bw 4 -bc "#111111" -run-list-command 

# Workflow
bindsym $mod+q exec ~/.files/i3/scripts/workflow.sh

