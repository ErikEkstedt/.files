{
    "editor.cursorBlinking": "solid",
    "keyboard.dispatch"    : "keyCode",   // modified keymappings work
    "workbench.colorTheme" : "Monokai",

    "vim.leader"        : " ",
    "vim.easymotion"    : true,
    "vim.easymotionKeys": "hklyuiopnm,qwertzxcvbasdgjf",
    "vim.foldfix"       : true,

    "vim.otherModesKeyBindingsNonRecursive": [
        { "before":["Y"], "after":["y", "$"], }, 
        { "before":["v", "v"], "after":["V"], }, 
        { "before":["L"], "after":["$"], }, 
        { "before":["H"], "after":["0"] },
        { "before":["tab"], "after":[">"] },

        { "before": ["leader", "l"], "after": ["leader", "leader", "w"]},
        { "before": ["leader", "h"], "after": ["leader", "leader", "b"]},
        { "before": ["leader", "j"], "after": ["leader", "leader", "j"]},
        { "before": ["leader", "k"], "after": ["leader", "leader", "k"]},
        { "before": ["leader", "leader"], "after": ["leader", "leader","leader", "b", "d", "w"]},

        { "before":["\\", "l", "v"], "after":[], "command": "markdown-preview-enhanced.openPreview", },

        //
        { "before": ["Ã–"], "after": ["A", ";", "escape"]},
    ],
    "vim.insertModeKeyBindings": [

    ],

    "window.zoomLevel"                          : 0,
    "vim.easymotionMarkerFontFamily"            : "monospace",
    "vim.easymotionMarkerFontSize"              : "16",
    "vim.easymotionMarkerFontWeight"            : "bold",
    "vim.easymotionMarkerBackgroundColor"       : "#000",
    "vim.easymotionMarkerForegroundColorOneChar": "#FFF",
    "vim.easymotionMarkerForegroundColorTwoChar": "#AA9999",
    "vim.easymotionMarkerHeight"                : 18,
    "vim.easymotionMarkerWidthPerChar"          : 15,

    "workbench.iconTheme"                   : "vscode-icons",
    "workbench.colorCustomizations"         : {},
    "materialTheme.cache.workbench.settings": {
        "accentPrevious": "Cyan"
    },
}